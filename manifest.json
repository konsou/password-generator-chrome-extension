{
  "manifest_version": 3,
  "name": "Finnish Passphrase Generator",
  "description": "Generates passphrases using Finnish dictionaries. NOTE: randomness not guaranteed to be cryptographically secure!",
  "version": "0.0.0.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
	"16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "64":  "icons/icon64.png",
    "128": "icons/icon128.png"
}
}