{
  "manifest_version": 3,
  "name": "Finnish Passphrase Generator",
  "description": "Generates passphrases using Finnish dictionaries.",
  "version": "0.0.0.2",
  "homepage_url": "https://github.com/konsou/password-generator-chrome-extension",
  "author": "Tomi Javanainen",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}